<div class="col-md-4">
    <div class="sidebar">
        <aside class="box">
            <dl>
                <dt><%= t ".open_time" %></dt>
                <dd><%= locale_time @place.open_time %></dd>
                <dt><%= t ".close_time" %></dt>
                <dd><%= locale_time @place.close_time %></dd>
                <dt><%= t ".ship_price" %></dt>
                <dd><%= ship_price @place %></dd>
                <dt><%= t ".distance_from_here" %></dt>
                <dd><%= distance_from_here @place %></dd>
            </dl>
        </aside>
        <aside>
            <h2><%= t ".contact" %></h2>
            <address>
                <strong><%= @place.name %></strong><br>
                <%= @place.address %><br>
                <br>
                <%= t ".phone" %> <%= show_phone @place %><br>
                <%= t ".email" %> <a href="#"><%= show_email @place %></a><br>
                <%= t ".request_owner" %> <%= link_to t(".request_owner"), new_place_request_owner_path(@place) %><br>
            </address>
        </aside>
    </div>
    <!--end sidebar-->
</div>
<!--end col-md-4-->
