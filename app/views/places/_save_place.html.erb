<%= form_for(current_user.saved_places.build, remote: true) do |f| %>
  <div><%= hidden_field_tag :place_id, @place.id %></div>
  <div><%= hidden_field_tag :user_id, current_user.id %></div>
  <%= button_tag type: "submit", class: "btn btn-info", title: t(".save") do %>
    <i class="fa fa-bookmark-o" aria-hidden="true"></i> <%= t ".save" %>
  <% end %>
<% end %>
