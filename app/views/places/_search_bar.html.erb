<div class="col-md-3">
    <div class="sidebar">
        <div class="box filter">
            <h2><%= t ".title" %></h2>
                <div class="form-group">
                    <label for="form-filter-place-name"><%= t ".by_name" %></label>
                    <%= text_field "name_cont", "", class: "form-control", id: "form-filter-place-name" %>
                </div>
                <!--end form-group-->
                <div class="collapse in" id="filter-advanced-search">
                    <div class="wrapper">
                        <section>
                            <h3><%= t ".by_category" %> </h3>
                            <ul class="checkboxes filter-category-checkbox">
                                <% list_place_categories.each do |category| %>
                                    <li>
                                        <label>
                                            <%= check_box_tag "",
                                                category.id, false, class: "filter-category-place" %>
                                                 <%= category.name %><span>(67)</span>
                                        </label>
                                    </li>
                                <% end %>
                            </ul>
                            <div class="collapse" id="all-property-types">
                                <ul class="checkboxes">
                                    <li><label><input type="checkbox" name="ski-center">Ski Center<span>67</span></label></li>
                                    <li><label><input type="checkbox" name="cottage">Cottage<span>31</span></label></li>
                                    <li><label><input type="checkbox" name="hostel">Hostel<span>68</span></label></li>
                                    <li><label><input type="checkbox" name="boat">Boat<span>52</span></label></li>
                                </ul>
                            </div>
                            <!--end checkboxes-->
                            <a href="#all-property-types" class="link" data-toggle="collapse" aria-expanded="false" aria-controls="all-property-types">Show all</a>
                        </section>
                        <!--end section-->
                    </div>
                    <div class="wrapper">
                        <section>
                            <h3><%= t ".by_province" %></h3>
                            <div class="form-group">
                                <label><%= t ".province" %></label>
                                <select class="form-control framed" id="filter-provinces">
                                    <option value=""><%= t ".select_province" %></option>
                                    <% list_provinces.each do |province| %>
                                        <option value="<%= province.id %>"><%= province.name %></option>
                                    <% end %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label><%= t ".district" %></label>
                                <select class="form-control framed" id="filter-districts">
                                    <option value=""><%= t ".select_district" %></option>
                                </select>
                            </div>
                        </section>
                        <!--end section-->
                    </div>
                    <!--end filter-advanced-search-->
                </div>
                <!--end collapse-->
                <div class="form-group center">
                    <button type="submit" class="btn btn-primary btn-rounded form-control">Search</button>
                </div>
            <!--end form-filter-->
        </div>
        <!--end filter-->
    </div>
    <!--end sidebar-->
</div>
